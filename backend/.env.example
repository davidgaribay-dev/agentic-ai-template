# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=local

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# CORS - comma-separated list of allowed origins (FRONTEND_URL is always included)
CORS_ORIGINS=http://localhost:3000

# PostgreSQL Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis
POSTGRES_DB=app

# JWT Authentication
# IMPORTANT: Generate a secure secret for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# WARNING: If not set, a random key is generated on each restart, invalidating all tokens!
SECRET_KEY=your-secret-key-change-in-production

# Token expiration settings
# Access tokens: Short-lived for security (default: 30 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
# Refresh tokens: Long-lived for user convenience (default: 7 days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# First superuser credentials (created on startup)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# API Keys (at least one required for agent to work)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Default model to use (anthropic, openai, google)
DEFAULT_LLM_PROVIDER=anthropic

# Memory Store - Embedding model for semantic memory search
# Uses OpenAI embeddings (requires OPENAI_API_KEY)
MEMORY_EMBEDDING_MODEL=text-embedding-3-small

# S3/SeaweedFS Storage (for file uploads like profile images)
S3_ENDPOINT_URL=http://localhost:8333
S3_ACCESS_KEY=any
S3_SECRET_KEY=any
S3_BUCKET_NAME=uploads
# S3_PUBLIC_URL=http://localhost:8333  # Optional: external URL for accessing files

# =============================================================================
# Infisical - Secrets Management
# =============================================================================
# Self-hosted Infisical URL (runs on port 8081 in docker-compose)
INFISICAL_URL=http://localhost:8081

# Machine Identity credentials (create in Infisical admin panel)
# Go to: Infisical Dashboard > Project Settings > Machine Identities > Create
INFISICAL_CLIENT_ID=
INFISICAL_CLIENT_SECRET=

# Project ID (found in Infisical project settings)
INFISICAL_PROJECT_ID=

# Environment slug (e.g., "dev", "staging", "prod")
INFISICAL_ENVIRONMENT=dev

# Admin credentials (auto-generated by setup-infisical.py, saved here for reference)
# INFISICAL_ADMIN_EMAIL=admin@infisical.local
# INFISICAL_ADMIN_PASSWORD=

# Infisical server configuration (for docker-compose)
# Generate with: python -c "import secrets; print(secrets.token_hex(16))"
INFISICAL_ENCRYPTION_KEY=
INFISICAL_AUTH_SECRET=
INFISICAL_DB_PASSWORD=infisical_dev
INFISICAL_REDIS_PASSWORD=redis_dev
INFISICAL_SITE_URL=http://localhost:8081
